{
  "name": "typescript-console-app",
  "version": "1.0.0",
  "description": "A TypeScript console application",
  "type": "module",
  "main": "dist/main.js",
  "scripts": {
    "build": "vite build",
    "run": "electron . --inspect",
    "debug": "vite build && electron . --inspect",
    "package": "vite build && electron-builder"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.51.0",
    "@modelcontextprotocol/sdk": "^1.11.4",
    "@types/express": "^5.0.1",
    "@types/node-fetch": "^2.6.12",
    "@types/node-notifier": "^8.0.5",
    "@types/pdfkit": "^0.13.9",
    "dotenv": "^16.5.0",
    "electron-is-dev": "^2.0.0",
    "express": "^5.1.0",
    "node-fetch": "^2.7.0",
    "node-notifier": "^10.0.1",
    "pdfkit": "^0.17.1",
    "ps-list": "^8.1.1",
    "screenshot-desktop": "^1.15.1",
    "systeminformation": "^5.25.11",
    "terminal-notifier": "^0.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/node": "^22.15.17",
    "cross-env": "^7.0.3",
    "electron": "^29.1.0",
    "electron-builder": "^24.12.0",
    "vite": "^6.3.5"
  },
  "build": {
    "appId": "com.electron.app",
    "files": [
      "dist/**/*",
      "public/**/*"
    ],
    "directories": {
      "output": "release"
    },
    "mac": {
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": "portable"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
