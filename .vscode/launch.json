{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Electron Main",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "electron",
      "runtimeArgs": ["--inspect-brk=5858", "."],
      "console": "integratedTerminal",
      "preLaunchTask": "npm: build"
    },
    {
      "name": "CLI to-remote",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/to-remote/build/index.js",
      "cwd": "${workspaceFolder}/to-remote",
      "console": "integratedTerminal",
      "env": {
        "NODE_ENV": "development"
      },
      "preLaunchTask": "build-to-remote"
    },
    {
      "name": "CLI to-remote (TypeScript)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/to-remote/index.ts",
      "cwd": "${workspaceFolder}/to-remote",
      "runtimeArgs": ["--loader", "ts-node/esm"],
      "console": "integratedTerminal",
      "env": {
        "NODE_ENV": "development"
      }
    }
  ]
}